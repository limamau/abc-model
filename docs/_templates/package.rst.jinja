{%- macro automodule(modname, options) -%}
.. automodule:: {{ modname }}
{%- for option in options %}
    :{{ option }}:
{%- endfor %}
{%- endmacro %}

{%- macro toctree(docnames) -%}
{# This is the *default* toctree for sub-sub-packages #}
.. toctree::
    :maxdepth: {{ maxdepth }}
{% for docname in docnames %}
    {{ docname }}
{%- endfor %}
{%- endmacro %}

{# Check if this is a first-level subpackage #}
{%- set is_first_level_subpackage = (pkgname.count('.') == 1) -%}

{# --- Title --- #}
{%- if '.' in pkgname %}
{# This is a SUB-package, e.g. "abcmodel.rad" #}
{{- pkgname.split('.')[-1].replace('_', ' ') | title | e | heading }}
{%- else %}
{# This is a ROOT package#}
{%- if is_namespace %}
{{- [pkgname, "namespace"] | join(" ") | e | heading }}
{%- else %}
{{- [pkgname, "package"] | join(" ") | e | heading }}
{%- endif %}
{%- endif %}

{%- if is_namespace %}
.. py:module:: {{ pkgname }}
{% endif %}

{# --- 'modulefirst' automodule call (for __init__.py) --- #}
{# We skip this for first-level subpackages #}
{%- if modulefirst and not is_namespace and not is_first_level_subpackage %}
{{ automodule(pkgname, automodule_options) }}
{% endif %}

{# Subpackages Section #}
{# We skip this for first-level subpackages and use something manual instead #}
{%- if subpackages and not is_first_level_subpackage %}
Subpackages
-----------
{{ toctree(subpackages) }}
{% endif %}


{# Submodules Section #}
{%- if submodules %}
{%- if is_first_level_subpackage %}
{# CUSTOM TEMPLATE for e.g. abcmodel.rad #}

.. toctree::
    :maxdepth: 1
{% for docname in submodules %}
    {{ docname }}
{%- endfor %}

{%- else %}
{# CUSTOM TEMPLATE for e.g. abcmodel.rad.standard #}
Submodules
----------
{% if separatemodules %}
{{ toctree(submodules) }}
{% else %}
{%- for submodule in submodules %}
{% if show_headings %}
{{- [submodule, "module"] | join(" ") | e | heading(2) }}
{% endif %}
{{ automodule(submodule, automodule_options) }}
{% endfor %}
{%- endif %}
{%- endif %}
{%- endif %}


{# --- 'Module contents' automodule call (for __init__.py) --- #}
{# We skip this for first-level subpackages as requested #}
{%- if not modulefirst and not is_namespace and not is_first_level_subpackage %}
Module contents
---------------
{{ automodule(pkgname, automodule_options) }}
{% endif %}
